pipeline {
    agent any

    environment {
       FAST_API_SERVICE = "fast-api"
       ENV_FILE = ".env.prod"
    }

    stages {

        stage('Checkout') {
            steps {
                git 'https://github.com/raison-collab/TutorialServiceFastAPI.git'
            }
        }

//        stage('Test') {
//            steps {
//                script {
//                    docker.image(FAST_API_SERVICE).inside {
//                        sh 'pytest'
//                    }
//                }
//            }
//        }

        stage('Deploy') {
           steps {
               script {
                   // Остановка и удаление старого контейнера
                   sh """
                   docker-compose --env-file ${ENV_FILE} stop ${FAST_API_SERVICE}
                   docker-compose --env-file ${ENV_FILE} rm -f ${FAST_API_SERVICE}
                   docker-compose --env-file ${ENV_FILE} up -d --build ${FAST_API_SERVICE}
                   """
               }
           }
        }
    }

    post {
       always {
           cleanWs()
       }
    }
}